{
  "env": {
    "node": true,
    "browser": true,
    "es6": true,
    "jest": true
  },
  "extends": ["airbnb-base", "prettier", "prettier/react", "plugin:react/recommended"],
  "plugins": ["prettier", "react", "react-native", "jest"],
  "rules": {
    "prettier/prettier": ["error"],
    "no-unused-vars": ["error", { "argsIgnorePattern": "^_" }]
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "sourceType": "module"
  }
}
